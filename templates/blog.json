: center;\n    height: 320px;\n    border-radius: 8px;\n}\n  .blog-slider {\n    position: relative;\n    width: 100%;\n    overflow: hidden;\n  }\n\n  .blog-slider-wrapper {\n    display: flex;\n    transition: transform 0.5s ease-in-out;\n    gap: 0px;\n  }\n\n  .blog-slide {\n    flex: 0 0 55%; \/* Show two slides at a time *\/\n    opacity: 1;\n    transform: scale(1);\n    transition: transform 0.5s ease, opacity 0.5s ease;\n    padding-right: 20px;\n  }\n\n  .blog-slide.active {\n    opacity: 1;\n    transform: scale(1); \/* Enlarge the active slide *\/\n  }\n\n  .blog-content {\n    color: #fff;\n    background: linear-gradient(#00000000, #000000d6);\n    padding: 0px 25px;\n    border-radius: 8px;\n    height: 100%;\n    display: flex;\n    flex-direction: column;\n    justify-content: flex-end;\n  }\n\n  .blog-content b {\n  font-weight: 800;\n  }\n\n  p.blog-date {\n  font-size: 14px;\n  }\n  \n  .blog-content h3{\n      font-size: 21px;\n  }\n\n  .slider-controls {\n    position: absolute;\n    top: 10px;\n    right: 10px;\n    display: flex;\n    gap: 10px;\n  }\n  .feature-artical-info {\n    display: flex;\n    justify-content: space-between;\n    gap: 10px;\n  }\n  .feature-artical-info a{\n    color: #fff;\n    width: 100px;\n    text-align: end;\n  }\n  .feature-artical-info a:hover{\n    text-decoration: underline;\n  }\n  .arrows {\n  display: flex;\n  gap: 15px;\n  justify-content: flex-end;\n  align-items: center;\n  }\n\n  .arrow {\n  border: none;\n  border-radius: 50%;\n  border: 1px solid #603714;\n  cursor: pointer;\n  width: 40px;\n  height: 40px;\n  font-size: 20px;\n  font-weight: bold;\n  color: #333;\n  display: flex;\n  align-items: center;\n  justify-content: center;\n  }\n\n  .arrow:hover {\n  background-color: #f9f9f9;\n  }\n<\/style>\n\n<script>\n  document.addEventListener('DOMContentLoaded', function () {\nconst sliderWrapper = document.querySelector('.blog-slider-wrapper');\nconst slides = document.querySelectorAll('.blog-slide');\nconst prevBtn = document.querySelector('.slider-controls .prev');\nconst nextBtn = document.querySelector('.slider-controls .next');\nlet currentIndex = 0;\n\nfunction updateSlider() {\n  slides.forEach((slide, index) => {\n    slide.classList.toggle('active', index === currentIndex);\n  });\n\n  \/\/ Check if the viewport is mobile\n  const isMobile = window.matchMedia('(max-width: 480px)').matches;\n  const translateX = isMobile\n    ? currentIndex * -100 \/\/ On mobile, slide 100% width\n    : currentIndex * -55; \/\/ Default (desktop), slide 50% width\n\n  sliderWrapper.style.transform = `translateX(${translateX}%)`;\n}\n\nprevBtn.addEventListener('click', () => {\n  currentIndex = (currentIndex - 1 + slides.length) % slides.length;\n  updateSlider();\n});\n\nnextBtn.addEventListener('click', () => {\n  currentIndex = (currentIndex + 1) % slides.length;\n  updateSlider();\n});\n\n\/\/ Reapply the correct translation on window resize\nwindow.addEventListener('resize', updateSlider);\n\nupdateSlider(); \/\/ Initialize the slider\n});\n\n<\/script>","full_width":false,"remove_margin":false}},"main":{"type":"main-blog","blocks":{"info":{"type":"info","settings":{"show_date":true,"show_author":true,"show_comments_number":false}},"title":{"type":"title","settings":{}},"summary":{"type":"summary","settings":{"excerpt_limit":15}}},"block_order":["info","title","summary"],"custom_css":["span.blog-item__author.text-size--small {text-align: left;}",".blog-card-btn a:hover {background-color: #603714; color: #fff;}",".blog-card-btn a:hover svg path {fill: #fff;}",".collection-names-sidebar ul li:hover {background: #603714;}",".collection-names-sidebar ul li:hover a {color: #fff;}"],"settings":{"enable_tags":false,"layout":"grid-2 grid-lap-1","post_limit":4,"blog_show_image":true,"image_aspect_ratio":"1.33333"}},"rich_text_FRPEhJ":{"type":"rich-text","blocks":{"title_rkCKre":{"type":"title","settings":{"title":"Talk about your brand","title_size":"h2","seo_h_tag":"h2"}},